{
  "name": "mori-pics",
  "version": "2.0.0",
  "description": "Private image hosting with CloudFlare Workers + D1",
  "type": "module",
  "scripts": {
    "dev": "wrangler pages dev ./public --d1=DB --r2=R2 --port 8788",
    "dev:remote": "wrangler pages dev ./public --d1=DB --r2=R2 --remote",
    "deploy": "wrangler pages deploy ./public",
    "db:init": "wrangler d1 execute mori-pics-db --local --file=./src/db/schema.sql",
    "db:init:remote": "wrangler d1 execute mori-pics-db --remote --file=./src/db/schema.sql",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "hono": "^4.6.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "typescript": "^5.7.2",
    "wrangler": "^4.55.0"
  }
}
